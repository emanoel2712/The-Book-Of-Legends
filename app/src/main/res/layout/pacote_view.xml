<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".viewControl.PacoteActivity"
    >



    <ImageView
        android:id="@+id/ivPacote"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="3dp" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPacote"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNome"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="8sp" />

    <com.example.thebookoflegends.model.HorizontalNumberPicker
        android:id="@+id/nbQuantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescricao"
        android:layout_gravity="center" />


    <TextView
        android:id="@+id/tvValor"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nbQuantidade"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_below="@id/tvValor"
        android:background="@drawable/loja_bt_comprar"
        />


</LinearLayout>